---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date): string {
  return date.toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title="Blog"
  description="Artículos sobre procedimientos estéticos, tratamientos faciales, corporales e íntimos. Información médica confiable de Bendov Clínica Estética."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-primary-950 pt-32 pb-20 md:pt-40 md:pb-28">
    <img src="/images/site/hero-home.webp" alt="" class="absolute inset-0 h-full w-full object-cover opacity-20" loading="eager" decoding="async" />
    <div class="absolute inset-0 bg-gradient-to-br from-primary-950/90 via-primary-900/80 to-primary-800/70" />
    <div class="relative mx-auto max-w-4xl px-6 text-center">
      <p class="mb-4 text-sm font-semibold uppercase tracking-[0.15em] text-primary-300">Bendov Clínica Estética</p>
      <h1 class="font-display text-3xl font-bold text-white md:text-5xl lg:text-6xl">Blog</h1>
      <p class="mx-auto mt-6 max-w-2xl text-lg text-primary-200 md:text-xl">
        Artículos informativos sobre procedimientos estéticos, escritos por nuestro equipo médico.
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="mx-auto max-w-6xl px-6 py-16 md:py-24">
    {sortedPosts.length === 0 ? (
      <div class="text-center py-16">
        <p class="text-lg text-neutral-500">Próximamente publicaremos artículos informativos sobre nuestros procedimientos.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <a
            href={`/blog/${post.data.slug}/`}
            class="group relative block overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-neutral-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          >
            {post.data.thumbnailImage ? (
              <div class="aspect-[16/10] overflow-hidden">
                <img
                  src={post.data.thumbnailImage}
                  alt={post.data.title}
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            ) : (
              <div class="aspect-[16/10] bg-gradient-to-br from-primary-100 to-primary-200">
                <div class="flex h-full items-center justify-center text-primary-400">
                  <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
                  </svg>
                </div>
              </div>
            )}
            <div class="p-5">
              {post.data.categories.length > 0 && (
                <div class="mb-2 flex flex-wrap gap-2">
                  {post.data.categories.map((cat: string) => (
                    <span class="inline-block rounded-full bg-primary-50 px-2.5 py-0.5 text-xs font-medium text-primary-700">
                      {cat}
                    </span>
                  ))}
                </div>
              )}
              <h2 class="font-display text-lg font-semibold leading-snug text-neutral-900 transition-colors group-hover:text-primary-700">
                {post.data.title}
              </h2>
              <p class="mt-2 line-clamp-2 text-sm leading-relaxed text-neutral-500">
                {post.data.description}
              </p>
              <div class="mt-4 flex items-center justify-between">
                <time datetime={post.data.date.toISOString()} class="text-xs text-neutral-400">
                  {formatDate(post.data.date)}
                </time>
                <span class="inline-flex items-center gap-1 text-sm font-medium text-primary-600">
                  Leer más
                  <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
