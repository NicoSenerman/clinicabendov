---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date): string {
  return date.toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title="Blog"
  description="Artículos sobre procedimientos estéticos, tratamientos faciales, corporales e íntimos. Información médica confiable de Bendov Clínica Estética."
>
  <!-- Light Editorial Hero -->
  <section class="border-b border-neutral-100 bg-white pt-32 pb-12 md:pt-40 md:pb-16">
    <div class="mx-auto max-w-4xl px-6 text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-neutral-400">Bendov Clínica Estética</p>
      <h1 class="mt-3 font-display text-4xl font-bold text-neutral-950 md:text-5xl">Blog</h1>
      <p class="mx-auto mt-4 max-w-xl text-base text-neutral-500 md:text-lg">
        Artículos informativos sobre procedimientos estéticos, escritos por nuestro equipo médico.
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="mx-auto max-w-6xl px-6 py-14 md:py-20">
    {sortedPosts.length === 0 ? (
      <div class="text-center py-16">
        <p class="text-lg text-neutral-500">Próximamente publicaremos artículos informativos sobre nuestros procedimientos.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 gap-y-10 sm:grid-cols-2 sm:gap-8 lg:grid-cols-3">
        {sortedPosts.map((post, i) => (
          <a
            href={`/blog/${post.data.slug}/`}
            class="group block"
          >
            {post.data.thumbnailImage ? (
              <div class="aspect-[16/10] overflow-hidden rounded-xl">
                <img
                  src={post.data.thumbnailImage}
                  alt={post.data.title}
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  loading={i < 3 ? "eager" : "lazy"}
                  decoding="async"
                />
              </div>
            ) : (
              <div class="aspect-[16/10] rounded-xl bg-gradient-to-br from-neutral-100 to-neutral-200">
                <div class="flex h-full items-center justify-center text-neutral-300">
                  <svg class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
                  </svg>
                </div>
              </div>
            )}
            <div class="mt-4">
              <div class="flex items-center gap-3 text-xs">
                {post.data.categories.length > 0 && (
                  <span class="font-semibold uppercase tracking-[0.1em] text-primary-600">
                    {post.data.categories[0]}
                  </span>
                )}
                <time datetime={post.data.date.toISOString()} class="text-neutral-400">
                  {formatDate(post.data.date)}
                </time>
              </div>
              <h2 class="mt-2 font-display text-lg font-semibold leading-snug text-neutral-900 transition-colors group-hover:text-primary-700">
                {post.data.title}
              </h2>
              <p class="mt-2 line-clamp-2 text-sm leading-relaxed text-neutral-500">
                {post.data.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
