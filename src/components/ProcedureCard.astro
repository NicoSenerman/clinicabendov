---
interface Props {
  title: string;
  href: string;
  description?: string;
  image?: string;
}

const { title, href, description, image } = Astro.props;
---

<a
  href={href}
  class="group relative block overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-neutral-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
>
  {image ? (
    <div class="aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
    </div>
  ) : (
    <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-200" />
  )}
  <div class="p-5">
    <h3 class="font-display text-lg font-semibold text-neutral-900 transition-colors group-hover:text-primary-700">
      {title}
    </h3>
    {description && (
      <p class="mt-2 line-clamp-2 text-sm leading-relaxed text-neutral-500">
        {description}
      </p>
    )}
    <span class="mt-3 inline-flex items-center gap-1 text-sm font-medium text-primary-600">
      Ver procedimiento
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </span>
  </div>
</a>
