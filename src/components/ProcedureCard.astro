---
interface Props {
  title: string;
  href: string;
  description?: string;
  image?: string;
  buttonLabel?: string;
}

const { title, href, description, image, buttonLabel = 'Ver Procedimientos' } = Astro.props;
---

<a
  href={href}
  class="group relative block overflow-hidden rounded-xl bg-white shadow-sm ring-1 ring-neutral-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg sm:rounded-2xl"
>
  {image ? (
    <div class="aspect-[3/2] overflow-hidden sm:aspect-[4/3]">
      <img
        src={image}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
    </div>
  ) : (
    <div class="aspect-[3/2] bg-gradient-to-br from-primary-100 to-primary-200 sm:aspect-[4/3]" />
  )}
  <div class="p-3 sm:p-5">
    <h3 class="font-display text-sm font-semibold text-neutral-900 transition-colors group-hover:text-primary-700 sm:text-lg">
      {title}
    </h3>
    {description && (
      <p class="mt-1 line-clamp-2 text-xs leading-relaxed text-neutral-500 sm:mt-2 sm:text-sm">
        {description}
      </p>
    )}
    <span class="mt-2 inline-flex items-center gap-1 rounded-full bg-primary-600 px-3 py-1.5 text-xs font-semibold text-white transition-colors group-hover:bg-primary-700 sm:mt-4 sm:gap-1.5 sm:px-5 sm:py-2 sm:text-sm">
      {buttonLabel}
      <svg class="h-3 w-3 transition-transform group-hover:translate-x-1 sm:h-4 sm:w-4" width="12" height="12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </span>
  </div>
</a>
