---
import { mainNavigation, mobileNavigation } from '../data/navigation';
import { siteConfig } from '../data/site';
import MobileNav from './MobileNav';
---

<header class="fixed top-0 z-40 w-full border-b border-neutral-100 bg-white/95 backdrop-blur-md">
  <!-- Top bar -->
  <div class="hidden border-b border-neutral-100 bg-primary-950 text-sm text-white md:block">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-2">
      <div class="flex items-center gap-4">
        <a href={siteConfig.contact.phoneHref} class="flex items-center gap-1.5 hover:text-accent-300 transition-colors">
          <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          {siteConfig.contact.phone}
        </a>
      </div>
      <div class="flex items-center gap-3">
        <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="hover:text-accent-300 transition-colors">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
        </a>
        <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="hover:text-accent-300 transition-colors">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Main nav -->
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 lg:px-6 lg:py-4">
    <!-- Mobile: hamburger left + logo right | Desktop: logo left -->
    <div class="flex items-center gap-2">
      <div class="lg:hidden">
        <MobileNav client:load navigation={mobileNavigation} whatsappHref={siteConfig.contact.whatsappHref} />
      </div>
      <a href="/">
        <img
          src="/images/site/logo-bendov.png"
          alt="Bendov Clínica Estética"
          class="h-8 w-auto lg:h-10"
          width="300"
          height="101"
        />
      </a>
    </div>

    <!-- Desktop navigation -->
    <nav class="hidden items-center gap-0.5 lg:flex" aria-label="Navegación principal">
      {mainNavigation.map((item) => (
        <div class="group relative">
          <a
            href={item.href}
            class="flex items-center gap-1 rounded-lg px-2.5 py-2 text-[13px] font-medium text-neutral-700 transition-colors hover:bg-primary-50 hover:text-primary-700 xl:px-3 xl:text-sm"
          >
            {item.label}
            {item.children && (
              <svg class="h-3 w-3 text-neutral-400 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            )}
          </a>
          {item.children && (
            <div class="invisible absolute left-1/2 top-full z-50 w-[540px] -translate-x-1/2 rounded-xl border border-neutral-100 bg-white p-4 opacity-0 shadow-xl transition-all duration-200 group-hover:visible group-hover:opacity-100">
              <div class="grid grid-cols-3 gap-4">
                {(() => {
                  const sections: { heading: typeof item.children[0]; items: typeof item.children }[] = [];
                  let current: typeof sections[0] | null = null;
                  for (const child of item.children!) {
                    if (child.heading) {
                      if (current) sections.push(current);
                      current = { heading: child, items: [] };
                    } else if (current) {
                      current.items.push(child);
                    }
                  }
                  if (current) sections.push(current);
                  
                  if (sections.length === 0) {
                    // Simple dropdown (no headings)
                    return (
                      <div class="col-span-3">
                        {item.children!.map((child) => (
                          <a href={child.href} class="block rounded-lg px-3 py-2 text-sm text-neutral-600 transition-colors hover:bg-primary-50 hover:text-primary-700">
                            {child.label}
                          </a>
                        ))}
                      </div>
                    );
                  }
                  
                  return sections.map((section) => (
                    <div>
                      <a href={section.heading.href} class="block px-3 py-1.5 text-xs font-bold uppercase tracking-wider text-primary-700">
                        {section.heading.label}
                      </a>
                      <div class="mt-1">
                        {section.items.map((child) => (
                          <a href={child.href} class="block rounded-lg px-3 py-1.5 text-sm text-neutral-600 transition-colors hover:bg-primary-50 hover:text-primary-700">
                            {child.label}
                          </a>
                        ))}
                      </div>
                    </div>
                  ));
                })()}
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- CTA -->
    <a
      href={siteConfig.contact.whatsappHref}
      target="_blank"
      rel="noopener noreferrer"
      class="hidden rounded-full bg-primary-600 px-4 py-2 text-xs font-semibold text-white transition-colors hover:bg-primary-700 lg:block xl:px-5 xl:py-2.5 xl:text-sm"
    >
      Agenda tu Evaluación
    </a>
  </div>
</header>
