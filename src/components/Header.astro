---
import { mainNavigation, mobileNavigation } from '../data/navigation';
import { siteConfig } from '../data/site';
import MobileNav from './MobileNav';
---

<header class="fixed top-0 z-40 w-full border-b border-neutral-100 bg-white/95 backdrop-blur-md">
  <!-- Top bar -->
  <div class="hidden border-b border-neutral-100 bg-primary-950 text-sm text-white md:block">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-2">
      <div class="flex items-center gap-4">
        <a href={siteConfig.contact.phoneHref} class="flex items-center gap-1.5 hover:text-accent-300 transition-colors">
          <svg class="h-3.5 w-3.5" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          {siteConfig.contact.phone}
        </a>
      </div>
      <div class="flex items-center gap-3">
        <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="hover:text-accent-300 transition-colors">
          <svg class="h-4 w-4" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
        </a>
        <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="hover:text-accent-300 transition-colors">
          <svg class="h-4 w-4" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Main nav -->
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 lg:px-6 lg:py-4">
    <!-- Mobile: 3-column grid [hamburger | logo centered | agenda btn] -->
    <!-- Desktop: logo left (grid collapses to auto) -->
    <div class="grid w-full grid-cols-[1fr_auto_1fr] items-center lg:flex lg:w-auto">
      <!-- Hamburger (mobile only) -->
      <div class="lg:hidden">
        <MobileNav client:load navigation={mobileNavigation} whatsappHref={siteConfig.contact.whatsappHref} schedulingUrl={siteConfig.contact.schedulingUrl} />
      </div>
      <!-- Logo: centered on mobile, left on desktop -->
      <a href="/" class="flex justify-center lg:justify-start">
        <img
          src="/images/site/logo-bendov.png"
          alt="Bendov Clínica Estética"
          class="h-8 w-auto lg:h-10"
          width="120"
          height="40"
        />
      </a>
      <!-- Agenda button (mobile only) -->
      <div class="flex justify-end lg:hidden" style="min-width:0">
        <a
          href={siteConfig.contact.schedulingUrl}
          target="_blank"
          rel="noopener noreferrer"
          data-gtm="cta-scheduling"
          data-gtm-location="header-mobile"
          class="rounded-full bg-primary-600 px-3 py-1.5 text-xs font-semibold text-white transition-colors hover:bg-primary-700"
        >
          Agendar
        </a>
      </div>
    </div>

    <!-- Desktop navigation -->
    <nav class="hidden items-center gap-0.5 lg:flex" aria-label="Navegación principal">
      {mainNavigation.map((item) => (
        <div class="group relative">
          <a
            href={item.href}
            class="flex items-center gap-1 rounded-lg px-2.5 py-2 text-[13px] font-medium text-neutral-700 transition-colors hover:bg-primary-50 hover:text-primary-700 xl:px-3 xl:text-sm"
          >
            {item.label}
            {item.children && (
              <svg class="h-3 w-3 text-neutral-400 transition-transform group-hover:rotate-180" width="12" height="12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            )}
          </a>
          {item.children && (
            <div class="invisible absolute left-1/2 top-full z-50 w-[680px] -translate-x-1/2 rounded-xl border border-neutral-100 bg-white p-5 opacity-0 shadow-xl transition-all duration-200 group-hover:visible group-hover:opacity-100">
              <div class="grid grid-cols-4 gap-4">
                {(() => {
                  const sections: { heading: typeof item.children[0]; items: typeof item.children }[] = [];
                  let current: typeof sections[0] | null = null;
                  for (const child of item.children!) {
                    if (child.heading) {
                      if (current) sections.push(current);
                      current = { heading: child, items: [] };
                    } else if (current) {
                      current.items.push(child);
                    }
                  }
                  if (current) sections.push(current);
                  
                  if (sections.length === 0) {
                    // Simple dropdown (no headings)
                    return (
                      <div class="col-span-4">
                        {item.children!.map((child) => (
                          <a href={child.href} class="block rounded-lg px-3 py-2 text-sm text-neutral-600 transition-colors hover:bg-primary-50 hover:text-primary-700">
                            {child.label}
                          </a>
                        ))}
                      </div>
                    );
                  }

                  // Split: first 3 large pillars get their own column, remaining small ones share the 4th
                  const mainSections = sections.slice(0, 3);
                  const extraSections = sections.slice(3);
                  
                  return (
                    <>
                      {mainSections.map((section) => (
                        <div>
                          <a href={section.heading.href} class="block px-3 py-1.5 text-xs font-bold uppercase tracking-wider text-primary-700">
                            {section.heading.label}
                          </a>
                          <div class="mt-1">
                            {section.items.map((child) => (
                              <a href={child.href} class="block rounded-lg px-3 py-1.5 text-sm text-neutral-600 transition-colors hover:bg-primary-50 hover:text-primary-700">
                                {child.label}
                              </a>
                            ))}
                          </div>
                        </div>
                      ))}
                      {extraSections.length > 0 && (
                        <div class="space-y-4">
                          {extraSections.map((section) => (
                            <div>
                              <a href={section.heading.href} class="block px-3 py-1.5 text-xs font-bold uppercase tracking-wider text-primary-700">
                                {section.heading.label}
                              </a>
                              <div class="mt-1">
                                {section.items.map((child) => (
                                  <a href={child.href} class="block rounded-lg px-3 py-1.5 text-sm text-neutral-600 transition-colors hover:bg-primary-50 hover:text-primary-700">
                                    {child.label}
                                  </a>
                                ))}
                              </div>
                            </div>
                          ))}
                        </div>
                      )}
                    </>
                  );
                })()}
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- CTAs -->
    <div class="hidden items-center gap-2 lg:flex">
      <a
        href={siteConfig.contact.schedulingUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-gtm="cta-scheduling"
        data-gtm-location="header"
        class="rounded-full bg-primary-600 px-4 py-2 text-xs font-semibold text-white transition-colors hover:bg-primary-700 xl:px-5 xl:py-2.5 xl:text-sm"
      >
        Agenda tu Evaluación
      </a>
      <a
        href={siteConfig.contact.whatsappHref}
        target="_blank"
        rel="noopener noreferrer"
        data-gtm="cta-whatsapp"
        data-gtm-location="header"
        aria-label="WhatsApp"
        class="flex h-9 w-9 items-center justify-center rounded-full bg-[#25d366] text-white transition-colors hover:bg-[#20bd5a] xl:h-10 xl:w-10"
      >
        <svg class="h-4 w-4 xl:h-5 xl:w-5" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
      </a>
    </div>
  </div>
</header>
