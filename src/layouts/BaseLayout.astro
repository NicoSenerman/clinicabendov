---
import { ViewTransitions } from 'astro:transitions';
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import { siteConfig } from '../data/site';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  noindex?: boolean;
  keywords?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="facebook-domain-verification" content="6wtznq9b4sdgyv4z6arpkv1wa6fqg0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Preload logo -->
    <link rel="preload" href="/images/site/logo-bendov.png" as="image" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <SEOHead {...props} />
    <ViewTransitions />

    <!-- Structured Data: HealthAndBeautyBusiness + MedicalClinic -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": ["HealthAndBeautyBusiness", "MedicalClinic"],
          "@id": `${siteConfig.url}/#organization`,
          "name": siteConfig.name,
          "alternateName": "Clinica Bendov",
          "url": siteConfig.url,
          "logo": `${siteConfig.url}/images/site/logo-bendov.png`,
          "image": `${siteConfig.url}/images/site/equipo-bendov.webp`,
          "telephone": siteConfig.contact.phone,
          "email": siteConfig.contact.email,
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "El Trovador #4280, Of. 410",
            "addressLocality": "Las Condes",
            "addressRegion": "Región Metropolitana",
            "postalCode": "7550075",
            "addressCountry": "CL",
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": -33.4145,
            "longitude": -70.5956,
          },
          "areaServed": {
            "@type": "City",
            "name": "Santiago",
          },
          "priceRange": "$$$",
          "currenciesAccepted": "CLP",
          "paymentAccepted": "Cash, Credit Card, Debit Card",
          "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "reviewCount": "159",
            "bestRating": "5",
          },
          "sameAs": [
            siteConfig.social.facebook,
            siteConfig.social.instagram,
          ],
          "openingHoursSpecification": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "09:00",
              "closes": "19:00",
            },
          ],
          "medicalSpecialty": [
            "PlasticSurgery",
          ],
          "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Procedimientos Estéticos",
            "itemListElement": [
              { "@type": "OfferCatalog", "name": "Procedimientos Corporales" },
              { "@type": "OfferCatalog", "name": "Procedimientos Faciales" },
              { "@type": "OfferCatalog", "name": "Procedimientos Íntimos" },
            ],
          },
        },
        {
          "@type": "WebSite",
          "@id": `${siteConfig.url}/#website`,
          "url": siteConfig.url,
          "name": siteConfig.name,
          "publisher": { "@id": `${siteConfig.url}/#organization` },
          "inLanguage": "es",
          "potentialAction": {
            "@type": "SearchAction",
            "target": `${siteConfig.url}/?s={search_term_string}`,
            "query-input": "required name=search_term_string",
          },
        },
      ],
    })} />

    <!-- Google Tag Manager -->
    <script is:inline define:vars={{ gtmId: siteConfig.analytics.gtmId }}>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer', gtmId);
    </script>

    <!-- Google Tag (gtag.js) — GA4 + GT not included in GTM container -->
    <script is:inline define:vars={{ gaId: siteConfig.analytics.gaId, gtId: siteConfig.analytics.gtId }}>
      var s=document.createElement('script');s.async=true;
      s.src='https://www.googletagmanager.com/gtag/js?id='+gtId;
      document.head.appendChild(s);
      window.dataLayer=window.dataLayer||[];
      function gtag(){dataLayer.push(arguments);}
      gtag('js',new Date());
      gtag('config',gtId);
      gtag('config',gaId);
    </script>

    <!-- Microsoft Clarity -->
    <script is:inline>
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window,document,"clarity","script","r4ttm492kl");
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- GTM noscript -->
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${siteConfig.analytics.gtmId}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>

    <Header transition:persist />

    <main class="flex-1">
      <slot />
    </main>

    <Footer transition:persist />
    <WhatsAppButton transition:persist />
  </body>
</html>
